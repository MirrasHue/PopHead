<entityTemplates>
  
    <entityTemplate name="Player">
        <component name="KinematicCollisionBody" mass="10" />
        <component name="GunAttacker" minSecondsInterval="0.3 " bullets="20" isTryingToAttack="false" />
        <component name="MeleeAttacker" minSecondsInterval="0.8" isTryingToAttack="false" />
        <component name="Health" healthPoints="100" maxHealthPoints="100" />
        <component name="Player" />
        <component name="FaceDirection" />
        <component name="Color" r="255" g="255" b="255" a="255" />
        <component name="BodyRect" x="0.0" y="0.0" width="20.0" height="20.0" />
        <component name="Z" z="95"/>
        <component name="CharacterSpeed" speed="100" />
        <component name="Velocity" dx="0" dy="0" />
        <component name="Texture" filepath="textures/characters/playerFullAnimation.png" />
        <component name="TextureRect" x="0" y="0" width="0" height="0" />
        <component name="Camera" priority="1" x="0" y="0" width="640" height="360" />
        <component name="Killable" />
        <component name="AnimationData" firstStateName="left" delay="0.1" animationStatesFile="animations/character.animstates.xml"/>
        <component name="ParticleEmitter">
            <particleAttrib name="startColor" r="0" g="10" b="100" a="255"/>
            <particleAttrib name="spawnPositionOffset" x="-500" y="-300"/>
            <particleAttrib name="randomSpawnAreaSize" width="1000" height="20"/>
            <particleAttrib name="initialVelocity" x="0" y="4"/>
            <particleAttrib name="acceleration" x="0.2" y="0.5"/>
            <particleAttrib name="size" x="6" y="6"/>
            <particleAttrib name="amount" v="450"/>
            <particleAttrib name="lifetime" v="3"/>
            <particleAttrib name="isEmitting" v="true"/>
        </component>
    </entityTemplate>

    <entityTemplate name="Zombie">
        <component name="Velocity" dx="2.0" dy="2.0" />
        <component name="Health" healthPoints="100" maxHealthPoints="100" />
        <component name="KinematicCollisionBody" mass="10" />
        <component name="Damage" damageDealt="25" />
        <component name="CollisionWithPlayer"/>
        <component name="BodyRect" x="0.0" y="0.0" width="20.0" height="20.0" />
        <component name="Z" z="95"/>
        <component name="Color" r="255" g="255" b="255" a="255" />
        <component name="Texture" filepath="textures/characters/zombieFullAnimation.png" />
        <component name="TextureRect" x="0" y="0" width="20" height="20" />
        <component name="AnimationData" firstStateName="left" delay="0.1" animationStatesFile="animations/character.animstates.xml"/>
        <component name="Killable"/>
    </entityTemplate>


  <entityTemplate name="Pistol">
    <component name="BodyRect" x="200.0" y="60.0" width="15" height="9" />
    <component name="Z" z="95"/>
    <component name="Texture" filepath="textures/others/pistol.png" />
    <component name="TextureRect" x="0" y="0" width="11" height="7" />
    <component name="HiddenForRenderer"/>
  </entityTemplate>
  
</entityTemplates>

<entities>

  <entity sourceTemplate="Player">
    <component name="BodyRect" x="200.0" y="100.0" width="20.0" height="20.0" />
  </entity>

  <entity sourceTemplate="Pistol">
    <component name="PlayerGun" />
  </entity>

  <entity sourceTemplate="Zombie"/>

</entities>