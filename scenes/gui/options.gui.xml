<?xml version="1.0" encoding="utf-8"?>
<gui>
  <widgetTemplate name="slider" texturePath="others/bar.png" size="0.5, 0.1" iconTexturePath="others/zombieHead.png" />
  <interface name="credits">
    <textWidget name="Music" text="Music" bottomCenterPos="0.5, 0.45" fontName="joystixMonospace.ttf" textColor="rgb(27, 74, 32)" fontSize="40" />
    <sliderWidget name="musicSlider" template="slider" topCenterPos="0.5, 0.5" initValue="get:MusicVolume" minValue="0" maxValue="100" onButtonUpdate="set:MusicVolume"/>
    <textWidget name="Sound" text="Sound" bottomCenterPos="0.5, 0.65"   fontName="joystixMonospace.ttf" textColor="rgb(27, 74, 32)" fontSize="40" />
    <sliderWidget name="SoundSlider" template="slider" topCenterPos="0.5, 0.7" initValue="get:SoundVolume" minValue="0" maxValue="30" onButtonUpdate="set:SoundVolume"/>
    <textWidget name="exitButton" text="Main menu" texturePath="gui/button.png" color="rgb(230, 30, 10)" fontSize="50" centerPos="0.5,0.9" size="0.3, 0.075" fontName="joystixMonospace.ttf" textColor="black" onButtonPressed="replaceScene:mainMenu.xml" />
  </interface>
</gui>
