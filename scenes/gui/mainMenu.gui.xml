<?xml version="1.0" encoding="UTF-8"?>
<gui>
    <interface name="mainMenu">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <textWidget name="storyButton"   contentPath="textures/gui/storyButton.png"   scale="0.85" origin="0.5" position="0.5, 0.450" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/subtitlesBeforeStartGameCutscene.xml" text="Story"></textWidget>
            <textWidget name="arenaButton"   contentPath="textures/gui/arenaButton.png"   scale="0.85" origin="0.5" position="0.5, 0.535" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="white" text="Arena (soon)"></textWidget>
            <textWidget name="cretitsButton" contentPath="textures/gui/creditsButton.png" scale="0.85" origin="0.5" position="0.5, 0.620" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/credits.xml" text="Credits"></textWidget>
            <textWidget name="optionsButton" contentPath="textures/gui/optionsButton.png" scale="0.85" origin="0.5" position="0.5, 0.705" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/options.xml" text="Options"></textWidget>
            <textWidget name="exitButton"    contentPath="textures/gui/exitButton.png"    scale="0.85" origin="0.5" position="0.5, 0.790" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="closeGame" text="Exit"></textWidget>
        </widget>
    </interface>
</gui>
