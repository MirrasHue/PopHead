<?xml version="1.0" encoding="UTF-8"?>
<gui>
  <widgetTemplate name="button" texturePath="gui/button.png" size="1, 0.15" fontName="joystixMonospace.ttf" textColor="black" fontSize="55"/>
  <interface name="mainMenu">
    <widget name="buttons" topCenterPosition="0.5, 0.45" size="0.30, 0.5" color="transparent" >
      <textWidget name="storyButton"   template="button" text="Story"   color="green"   topCenterPosition="0.5, 0.0" onButtonPressed="replaceScene:subtitlesBeforeStartGameCutscene.xml" />
      <textWidget name="arcadeButton"  template="button" text="Arcade"  color="orange"  topCenterPosition="0.5, 0.2" onButtonPressed="replaceScene:arcadeModeChooseMenu.xml" />
      <textWidget name="cretitsButton" template="button" text="Credits" color="blue"    topCenterPosition="0.5, 0.4" onButtonPressed="replaceScene:credits.xml" />
      <textWidget name="optionsButton" template="button" text="Options" color="magenta" topCenterPosition="0.5, 0.6" onButtonPressed="replaceScene:options.xml" />
      <textWidget name="exitButton"    template="button" text="Exit"    color="red"     topCenterPosition="0.5, 0.8" onButtonPressed="closeGame" />
    </widget>
  </interface>
</gui>
