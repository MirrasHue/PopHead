<?xml version="1.0" encoding="utf-8"?>
<gui>
    <interface name="pauseScreen" hide="true">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
		        <textWidget name="resumeButton"     contentPath="textures/gui/storyButton.png" origin="0.5" position="0.5, 0.4" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black"  onButtonPressed="setGamePause:false" text="Resume"></textWidget>
            <textWidget name="exitToMenuButton" contentPath="textures/gui/exitButton.png"  origin="0.5" position="0.5, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/mainMenu.xml" text="Exit to menu"></textWidget>
        </widget>
    </interface>
    <interface name="gameOverScreen" hide="true">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <textWidget name="restartButton"  contentPath="textures/gui/storyButton.png" origin="0.5" position="0.5, 0.4" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/arcadeModeChooseMenu.xml:" text="Try Again"></textWidget>
            <textWidget name="exitToMenuButton" contentPath="textures/gui/exitButton.png"  origin="0.5" position="0.5, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/mainMenu.xml"         text="Exit to menu"></textWidget>
        </widget>
    </interface>
    <interface name="gameplayCounters">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <textWidget name="vitalityCounter" position="0.9, 0.01" contentPath="textures/others/heart.png" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1, 0.25" color="black" characterSize="15" text="100"/>
            <textWidget name="bulletCounter" position="0.9, 0.1" contentPath="textures/others/bullet.png" fontPath="fonts/joystixMonospace.ttf" textPosition="0.3, 0.37" color="black" characterSize="10" text="20"/>
        </widget>
    </interface>
    <interface name="arcadeCounters">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <widget name="counters" contentPath="textures/gui/arcadeCountersBackground.png" origin="0.5" position="0.5, 0.1">
                <textWidget name="arcadeClock" origin="0.5" position="0.05, 0.1" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="white" characterSize="15" text="Time: 0:0"/>
                <textWidget name="waveCounter" origin="0.5" position="0.05, 0.35" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="white" characterSize="15" text="Wave: 0   "/>
                <textWidget name="enemiesCounter" origin="0.5" position="0.05, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="white" characterSize="15" text="Enemies: 00"/>
            </widget>
        </widget>
    </interface>
	<interface name="arcadeInformations" hide="true">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
			<textWidget name="breakInfo" origin="0.5" position="0.25, 0.65" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="white" characterSize="30" text="Break Time!"/>
			<textWidget name="nextWaveInfo" origin="0.5" position="0.2, 0.75" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="white" characterSize="20" text="Next wave in 0 seconds!"/>
        </widget>
    </interface>
</gui>
