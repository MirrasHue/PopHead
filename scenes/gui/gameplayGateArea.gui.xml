<?xml version="1.0" encoding="utf-8"?>
<gui>
    <interface name="pauseScreen" hide="true">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
		        <textWidget name="resumeButton"     contentPath="textures/gui/storyButton.png" origin="0.5" position="0.5, 0.4" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black"  onButtonPressed="setGamePause:false" text="Resume"></textWidget>
            <textWidget name="exitToMenuButton" contentPath="textures/gui/exitButton.png"  origin="0.5" position="0.5, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/mainMenu.xml" text="Exit to menu"></textWidget>
        </widget>
    </interface>
    <interface name="gameOverScreen" hide="true">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <textWidget name="loadLastSave"     contentPath="textures/gui/storyButton.png" origin="0.5" position="0.5, 0.4" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="loadLastSave:" text="Load last save"></textWidget>
            <textWidget name="exitToMenuButton" contentPath="textures/gui/exitButton.png"  origin="0.5" position="0.5, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/mainMenu.xml"         text="Exit to menu"></textWidget>
        </widget>
    </interface>
    <interface name="gameplayCounters">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <textWidget name="vitalityCounter" position="0.9, 0.01" contentPath="textures/others/heart.png" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1, 0.25" color="black" characterSize="15" text="100"/>
            <textWidget name="pistolBulletCounter" position="0.9, 0.1" contentPath="textures/others/bullet.png" fontPath="fonts/joystixMonospace.ttf" textPosition="0.3, 0.37" color="black" characterSize="10" text="20"/>
            <textWidget name="shotgunBulletCounter" position="0.9, 0.2" contentPath="textures/others/shotgunShells.png" fontPath="fonts/joystixMonospace.ttf" textPosition="0.3, 0.37" color="black" characterSize="10" text="20"/>
        </widget>
    </interface>
    <interface name="labels" hide="true">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <widget name="guardSpeechBubble"  origin="0.5" position="0.73, 0.23" contentPath="textures/gui/speechBubble.png">
				        <textWidget name="characterName" origin="0.5" position="0.35, 0.7" fontPath="fonts/joystixMonospace.ttf" characterSize="17" color="blue" text="Gate Guard"/>
                <textWidget name="guard1"   origin="0.5" position="0.1,  0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="What do you think?"/>
                <textWidget name="guard1b"  origin="0.5" position="0.1,  0.30" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="There are zombies"/>
                <textWidget name="guard1c"  origin="0.5" position="0.1,  0.45" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="everywhere."/>
                <textWidget name="guard2"   origin="0.5" position="0.1,  0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="How am I supposed"/>
                <textWidget name="guard2b"  origin="0.5" position="0.1,  0.30" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="to know?"/>
                <textWidget name="guard2c"  origin="0.5" position="0.1,  0.45" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="It just blew up."/>
                <textWidget name="guard3"   origin="0.5" position="0.1,  0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Listen!"/>
                <textWidget name="guard3b"  origin="0.5" position="0.1,  0.30" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="You need to get"/>
                <textWidget name="guard3c"  origin="0.5" position="0.1,  0.45" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="to our base!"/>
                <textWidget name="guard4"   origin="0.5" position="0.1,  0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="30 meters from here"/>
                <textWidget name="guard4b"  origin="0.5" position="0.1,  0.30" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="there is crossroads"/>
                <textWidget name="guard5"   origin="0.5" position="0.1,  0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Follow the small"/>
                <textWidget name="guard5b"  origin="0.5" position="0.1,  0.30" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="path and you'll find"/>
                <textWidget name="guard5c"  origin="0.5" position="0.1,  0.45" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="entrance to sewers."/>
                <textWidget name="guard6"   origin="0.5" position="0.05, 0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Go through the sewage"/>
                <textWidget name="guard6b"  origin="0.5" position="0.1,  0.30" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="and you'll find"/>
                <textWidget name="guard6c"  origin="0.5" position="0.1,  0.45" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="our base"/>
                <textWidget name="guard7"   origin="0.5" position="0.1,  0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Now go!"/>
            </widget>
			      <widget name="playerSpeechBubble"  origin="0.5" position="0.32, 0.26" contentPath="textures/gui/mirrorSpeechBubble.png">
				        <textWidget name="characterName" origin="0.5" position="0.18, 0.7" fontPath="fonts/joystixMonospace.ttf" characterSize="17" color="rgb(10, 228, 119)" text="You"/>
                <textWidget name="player1"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="What's happened"/>
                <textWidget name="player1b" origin="0.5" position="0.1,  0.30"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="to this place?"/>
                <textWidget name="player2"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Yes, but how?!"/> 
            </widget>
            <widget name="hint" origin="0.5" position="0.5, 0.9" contentPath="textures/others/pressSpaceHint.png"/>
        </widget>
    </interface>
    <interface name="hints" hide="true">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <widget name="controlHint" contentPath="textures/gui/hintBackground.png" origin="0.5" position="0.22, 0.13" alpha="200" hide="true">
                    <textWidget name="moving" origin="0.5" position="0.31,  0.02"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="controls:"/>
                    <textWidget name="moving2"  position="0.1,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="Use [          ] to"/>
                    <textWidget name="moving3" position="0.1,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="     W, S, A, D"/>
                    <textWidget name="moving4" position="0.4,  0.55"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="walk."/>                  
            </widget>
                <widget name="shootingHint" contentPath="textures/gui/hintBackground.png" origin="0.5" position="0.22, 0.13" alpha="200" hide="true">
                    <textWidget name="shooting" origin="0.5" position="0.32,  0.02"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="shooting:"/>
                    <textWidget name="shooting2"  position="0.22,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="Use [     ] to"/>
                    <textWidget name="moving3" position="0.22,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="     enter"/>
                    <textWidget name="moving4" position="0.4,  0.55"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="shoot."/>                  
                </widget>
                <widget name="meleeFightingHint" contentPath="textures/gui/hintBackground.png" origin="0.5" position="0.22, 0.13" alpha="200" hide="true">
                    <textWidget name="melee" origin="0.5" position="0.2,  0.02"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="melee fighting:"/>
                    <textWidget name="melee2"  position="0.28,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="Use [ ] to"/>
                    <textWidget name="melee3" position="0.28,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="     \"/>
                    <textWidget name="melee4" position="0.42,  0.55"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="hit."/>              
                </widget>
                <widget name="interactionHint" contentPath="textures/gui/hintBackground.png" origin="0.5" position="0.22, 0.13" alpha="200" hide="true">
                    <textWidget name="interaction" origin="0.5" position="0.26,  0.02"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="interaction:"/>
                    <textWidget name="interaction2"  position="0.29,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="Use [ ] to"/>
                    <textWidget name="interaction3" position="0.29,  0.35"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="     E"/>
                    <textWidget name="interaction4" position="0.33,  0.55"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="interact."/>            
                </widget>
                <widget name="warningHint" contentPath="textures/gui/hintBackground.png" origin="0.5" position="0.22, 0.13" alpha="200" hide="true">
                    <textWidget name="warning" origin="0.5" position="0.32,  0.02"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="red" text="warning!"/>
                    <textWidget name="warning2"  position="0.07,  0.3"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="Sometimes it's better"/>
                    <textWidget name="warning3" position="0.07,  0.5"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="to       big groups"/>
                    <textWidget name="warning4" position="0.07,  0.5"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="red" text="   avoid"/>
                    <textWidget name="warning5" position="0.07,  0.7"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="white" text="of enemies"/>                  
                </widget>
            </widget>
    </interface>
</gui>
