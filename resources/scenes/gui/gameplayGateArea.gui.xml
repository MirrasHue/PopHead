<?xml version="1.0" encoding="utf-8"?>
<gui>
    <interface name="pauseScreen" hide="true">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
		        <textWidget name="resumeButton"     contentPath="textures/gui/storyButton.png" origin="0.5" position="0.5, 0.4" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black"  onButtonPressed="setGamePause:false" text="Resume"></textWidget>
            <textWidget name="exitToMenuButton" contentPath="textures/gui/exitButton.png"  origin="0.5" position="0.5, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/mainMenu.xml" text="Exit to menu"></textWidget>
        </widget>
    </interface>
    <interface name="gameOverScreen" hide="true">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <textWidget name="loadLastSave"     contentPath="textures/gui/storyButton.png" origin="0.5" position="0.5, 0.4" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="loadLastSave:" text="Load last save"></textWidget>
            <textWidget name="exitToMenuButton" contentPath="textures/gui/exitButton.png"  origin="0.5" position="0.5, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/mainMenu.xml"         text="Exit to menu"></textWidget>
        </widget>
    </interface>
    <interface name="gameplayCounters">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <textWidget name="vitalityCounter" position="0.9, 0.01" contentPath="textures/others/heart.png" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1, 0.25" color="black" characterSize="15" text="100"/>
            <textWidget name="bulletCounter" position="0.9, 0.1" contentPath="textures/others/bullet.png" fontPath="fonts/joystixMonospace.ttf" textPosition="0.3, 0.37" color="black" characterSize="10" text="20"/>
        </widget>
    </interface>
    <interface name="labels" hide="true">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <widget name="guardSpeechBubble"  origin="0.5" position="0.73, 0.23" contentPath="textures/gui/speechBubble.png">
				        <textWidget name="characterName" origin="0.5" position="0.35, 0.7" fontPath="fonts/joystixMonospace.ttf" characterSize="17" color="blue" text="Gate Guard"/>
                <textWidget name="guard1"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Good to see someone"/>
                <textWidget name="guard1b"  origin="0.5" position="0.1,  0.30"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="that's still alive"/>
                <textWidget name="guard2" origin="0.5" position="0.1,  0.15" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Wish I knew it."/>
                <textWidget name="guard2b" origin="0.5" position="0.1,  0.30" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="It just blew up. Now "/>
                <textWidget name="guard2c" origin="0.5" position="0.1,  0.45" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="they're everywhere."/>
                <textWidget name="guard3"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="I don't think"/>
                <textWidget name="guard3b"  origin="0.5" position="0.1,  0.30"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="there are any left."/>
                <textWidget name="guard4"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="You can try"/>
                <textWidget name="guard4b"  origin="0.5" position="0.1,  0.30"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="going north. There's"/>
                <textWidget name="guard4c"  origin="0.5" position="0.1,  0.45"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="a big canyon."/>
                <textWidget name="guard5"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Find sewers boy."/>
                <textWidget name="guard5b"  origin="0.5" position="0.1,  0.30"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="From there you can"/>
                <textWidget name="guard5c"  origin="0.5" position="0.1,  0.45"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="get to the city."/>
                <textWidget name="guard6"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="I'll stay here. It's"/>
                <textWidget name="guard6b"  origin="0.5" position="0.1,  0.3"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="safe enough behind"/>
                <textWidget name="guard6c"  origin="0.5" position="0.1,  0.45"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="this gate."/>
                <textWidget name="guard7"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Go now. I am sure"/>
                <textWidget name="guard7b"  origin="0.5" position="0.1,  0.3"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="we will meet again."/>
            </widget>
			      <widget name="playerSpeechBubble"  origin="0.5" position="0.34, 0.3" contentPath="textures/gui/mirrorSpeechBubble.png">
				        <textWidget name="characterName" origin="0.5" position="0.18, 0.7" fontPath="fonts/joystixMonospace.ttf" characterSize="17" color="rgb(10, 228, 119)" text="You"/>
                <textWidget name="player1"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Who are... "/>
                <textWidget name="player2"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="What ar..."/>
                <textWidget name="player3"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Just what is"/>
                <textWidget name="player3b"  origin="0.5" position="0.1,  0.3"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="going on here?!"/>
                <textWidget name="player4"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="We really need to do"/>
                <textWidget name="player4b"  origin="0.5" position="0.1,  0.3"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="something! Think,"/>
                <textWidget name="player4c"  origin="0.5" position="0.1,  0.45"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="think think..."/>
                <textWidget name="player5"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Ha! We just need to "/>
                <textWidget name="player5b"  origin="0.5" position="0.1,  0.3"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="hide! Do you know any"/>
                <textWidget name="player5c"  origin="0.5" position="0.1,  0.45"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="safe places nearby?"/>
                <textWidget name="player6"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="And what about you?"/>
                <textWidget name="player7"  origin="0.5" position="0.1,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Stay safe then..."/>
            </widget>
            <widget name="hint" origin="0.5" position="0.5, 0.9" contentPath="textures/others/pressSpaceHint.png"/>
        </widget>
    </interface>
    <interface name="hints" hide="true">
        <widget name="canvas" contentPath="textures/gui/menuBorder.png" origin="0.5">
            <widget name="smallGreyBackground" contentPath="textures/gui/smallGreyBackground.png" origin="0.5" position="0.5">
                <textWidget name="controls" origin="0.5" position="0.3,  0.02"  fontPath="fonts/joystixMonospace.ttf" characterSize="12" color="yellow" text="controls:"/>
                <widget name="awsdHint" contentPath="textures/others/awsdHint.png" origin="0.5" position="0.5">
                    <textWidget name="moving"  origin="0.5" position="0.4,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="25" color="white" text="moving"/>
                </widget>
                <widget name="enterHint" contentPath="textures/others/enterHint.png" origin="0.5" position="0.4, 0.5">
                    <textWidget name="shooting"  origin="0.5" position="0.3,  0.15"  fontPath="fonts/joystixMonospace.ttf" characterSize="25" color="white" text="shooting"/>
                </widget>
                <widget name="backslashHint" contentPath="textures/others/backslashHint.png" origin="0.5" position="0.4, 0.5">
                    <textWidget name="hitting"  origin="0.5" position="0.3,  0.01"  fontPath="fonts/joystixMonospace.ttf" characterSize="25" color="white" text="hitting"/>
                </widget>
            </widget>
            <widget name="pressSpaceHint" origin="0.5" position="0.5, 0.9" contentPath="textures/others/pressSpaceHint.png"/>
        </widget>
    </interface>
</gui>
