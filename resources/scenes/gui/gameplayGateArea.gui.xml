            </widget>
			      <widget name="playerSpeechBubble"  origin="0.5" position="0.34, 0.3" contentPath="textures/gui/mirrorSpeechBubble.png">
                <textWidget name="player1"  origin="0.5" position="0.1,  0.2"  fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="Good to see someone\n that's still alive"/>
                <textWidget name="player2" origin="0.5" position="0.1,  0.35" fontPath="fonts/joystixMonospace.ttf" characterSize="15" color="black" text="are you doing?"/>
                <textWidget name="player3"  origin="0.5" position="0.1,  0.3"  fontPath="fonts/joystixMonospace.ttf" characterSize="25" color="black" text="What the..."/>
                <textWidget name="player4"  origin="0.5" position="0.12,  0.2"  fontPath="fonts/joystixMonospace.ttf" characterSize="35" color="black" text="FUCK ???"/>
