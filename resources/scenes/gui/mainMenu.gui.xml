<?xml version="1.0" encoding="UTF-8"?>
<gui>
    <interface name="mainMenu">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" origin="0.5">
		        <textWidget name="storyButton"   contentPath="textures/gui/storyButton.png"   origin="0.5" position="0.5"      fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/startGameCutScene.xml" text="Story"></textWidget>
            <textWidget name="arenaButton"   contentPath="textures/gui/arenaButton.png"   origin="0.5" position="0.5, 0.6" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="white" text="Arena (soon)"></textWidget>
            <textWidget name="cretitsButton" contentPath="textures/gui/creditsButton.png" origin="0.5" position="0.5, 0.7" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="replaceScene:scenes/credits.xml" text="Credits"></textWidget>
            <textWidget name="exitButton"    contentPath="textures/gui/exitButton.png"    origin="0.5" position="0.5, 0.8" fontPath="fonts/joystixMonospace.ttf" textPosition="0.1" color="black" onButtonPressed="closeGame" text="Exit"></textWidget>
        </widget>
    </interface>
</gui>
