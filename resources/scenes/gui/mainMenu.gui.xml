<?xml version="1.0" encoding="UTF-8"?>
<gui>
    <interface name="mainMenu">
        <widget name="menuBorder" contentPath="textures/gui/menuBorder.png" originX="0.5" originY="0.5">
		        <textWidget name="storyButton" contentPath="textures/gui/storyButton.png" originX="0.5" originY="0.5" positionX="0.5" positionY="0.4" fontPath="fonts/joystixMonospace.ttf" textPositionX="0.1" textPositionY="0.1" color="black" onButtonPressed="replaceScene:scenes/desert.xml" text="Story"></textWidget>
            <textWidget name="arenaButton" contentPath="textures/gui/arenaButton.png" originX="0.5" originY="0.5" positionX="0.5" positionY="0.5" fontPath="fonts/joystixMonospace.ttf" textPositionX="0.1" textPositionY="0.1" color="white" text="Arena (soon)"></textWidget>
            <textWidget name="cretitsButton" contentPath="textures/gui/creditsButton.png" originX="0.5" originY="0.5" positionX="0.5" positionY="0.6" fontPath="fonts/joystixMonospace.ttf" textPositionX="0.1" textPositionY="0.1" color="black" onButtonPressed="replaceScene:scenes/credits.xml" text="Credits"></textWidget>
            <textWidget name="exitButton" contentPath="textures/gui/exitButton.png" originX="0.5" originY="0.5" positionX="0.5" positionY="0.7" fontPath="fonts/joystixMonospace.ttf" textPositionX="0.1" textPositionY="0.1" color="black" onButtonPressed="closeTheGame" text="Exit"></textWidget>
